@model IEnumerable<BMI.Models.POModel>
@{
    ViewData["Title"] = ViewBag.status;
}
<div class="content-wrapper">
    <section class="content-header">
    </section>

    <!-- Main content -->
    <section class="content">
        <div class="row">
            <div class="col-12">

                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title"> @ViewBag.status List</h3>
                    </div>

                    <div class="card-body">
                        <table id="example1" class="table table-bordered table-striped table-sm">
                            <thead>
                                <tr>
                                    <th style="width: 2%;font-size:small">
                                        PT
                                    </th>
                                    <th style="width: 5%;font-size:small">
                                        PO
                                    </th>
                                    <th style="width: 5%;font-size:small">
                                        Batch
                                    </th>
                                </tr>
                            </thead>
                            @if (Model.Count() > 0) {
                            <tbody>
                                @foreach (var obj in Model)
                                {
                                    <tr>
                                        <td class="text text-sm">@obj.pt</td>
                                        <td style="font-size:small">@obj.po</td>
                                        <td > <a  style="font-size:small;color:black" asp-controller="Adjustment" asp-action="DetailFG" asp-route-po="@obj.po">@obj.batch</a> </td>
                                    </tr>
                                }
                            </tbody>
                            }
                        </table>
                    </div>
                    <!-- /.card-body -->
                </div>
                <!-- /.card -->
            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->
    </section>
    <!-- /.content -->
</div>
