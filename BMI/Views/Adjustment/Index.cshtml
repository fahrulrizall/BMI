@model IEnumerable<BMI.Models.ProductionView>
@{
    ViewData["Title"] = "Inventory";
}
<div class="content-wrapper">

    <section class="content-header">
    </section>

    <section class="content">
        <div class="row">
            <div class="col-12">

                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title">Adjustment</h3>
                    </div>

                    <div class="card-body">
                        <table class="table table-sm">
                            <thead>
                                <tr>
                                    <th style="width: 15%">
                                        Material
                                    </th>
                                    <th style="width: 1%">
                                        Action
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>Finished Good</td>
                                    <td>
                                        <a asp-controller="Adjustment" asp-action="AdjustmentFG" asp-route-status="Adjustment" class="btn btn-sm btn-primary">View</a>
                                    </td>
                                </tr>
                                <tr>
                                    <td>Raw Material</td>
                                    <td>
                                        <a asp-controller="Adjustment" asp-action="AdjustmentRaw" asp-route-status="Adjustment" class="btn btn-sm btn-primary">View</a>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                    <!-- /.card-body -->
                </div>
                <!-- /.card -->
            </div>
            <!-- /.col -->
        </div>



        <div class="row">
            <div class="col-12">

                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title">Destroy</h3>
                    </div>

                    <div class="card-body">
                        <table class="table table-sm">
                            <thead>
                                <tr>
                                    <th style="width: 15%">
                                        Material
                                    </th>
                                    <th style="width: 1%">
                                        Action
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>Finished Good</td>
                                    <td>
                                        <a asp-controller="Adjustment" asp-action="AdjustmentFG" asp-route-status="destroy" class="btn btn-sm btn-primary">View</a>
                                    </td>
                                </tr>
                                <tr>
                                    <td>Raw Material</td>
                                    <td>
                                        <a asp-controller="Adjustment" asp-action="AdjustmentRaw" asp-route-status="destroy" class="btn btn-sm btn-primary">View</a>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                    <!-- /.card-body -->
                </div>
                <!-- /.card -->
            </div>
            <!-- /.col -->
        </div>


        <!-- /.row -->
    </section>
</div>
