    <script>
        $(function () {
            var msg = '@TempData["msg"]';
            var result = '@TempData["result"]';
            if (result == 'success')
                toastr.success("", msg);
            else if (result == 'failed')
                toastr.error("", msg);
            else if (result == 'warning')
                toastr.warning("", msg);
        });
    </script>

    <script>
         $(function () {
            var status = '@TempData["status"]';
             if (status == "rounded") {
                 $('.reason-table').hide();
             } else {
                 $('.reason').show();
                 $('.raw-source').show();
             }

             $('.add-destroy-item').on('click', function () {
                 $('#formModalLabel').html('Add New Item');
                 $('.modal-body form').attr('action', '/Adjustment/Create');
                 $('#id_adjustmentFG').val("");
                 $('#pt').val("");
                 $('#bmi_code').val("");
                 $('#qty').val("");
                 if (status == "destroy") {
                     $('.reason').show();
                     $('#reason').val("");
                     $('.raw-source').show();
                     $('#raw_source').val("");
                 } else {
                     $('#reason').val("");
                     $('.reason').hide();
                     $('#raw_source').val("");
                     $('.raw-source').hide();
                 }
             });

             $('.update-destroy').on('click', function () {
                 $('#formModalLabel').html('Update Item');
                 var id = $(this).data('id');
                 $('.modal-body form').attr('action', '/Adjustment/Update');
                 if (status == "destroy") {
                     $('.reason').show();
                     $('#reason').val("");
                     $('.raw-source').show();
                     $('#raw_source').val("");
                 } else {
                     $('#reason').val("");
                     $('.reason').hide();
                     $('#raw_source').val("");
                     $('.raw-source').hide();
                 }
                 $.ajax({
                     url: '/Adjustment/Getdataitem',
                     data: { id: id },
                     method: 'get',
                     dataType: 'json',
                     success: function (data) {
                         console.log(data);
                         $('#id_adjustmentFG').val(data.id_adjustmentFG);
                         $('#pt').val(data.poModel.pt);
                         $('#bmi_code').val(data.bmi_code);
                         $('#qty').val(data.qty);
                         $('#raw_source').val(data.raw_source);
                         if (status == "destroy") {
                             $('.reason').val("");
                             $('#reason').val(data.reason);
                         } else {
                             $('.reason').hide();
                         }

                     }
                 });
             });



         });

    </script>

