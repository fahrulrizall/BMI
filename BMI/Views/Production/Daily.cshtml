@model IEnumerable<BMI.Models.ProductionInputModel>
@{DateTime date = ViewBag.date; }
@{
    ViewData["Title"] = date.Day+"/"+ date.Month +"/" +date.Year;
}

<div class="content-wrapper">
    <section class="content-header">
    </section>
    <!-- Main content -->
    <section class="content">
        <div class="container-fluid">
            <div class="row">

                <div class="col-md-12" id="partial-table">
                    <div class="card">
                        <div class="card-header">
                            <h3 class="card-title">@date.Day/@date.Month/@date.Year</h3>
                        </div>

                        <div class="card-body">
                            <table class="table table-bordered table-striped table-sm">
                                <thead>
                                    <tr>
                                        <th style="width: 2%;font-size:small">
                                            BMI PO
                                        </th>
                                        <th style="width: 2%;font-size:small">
                                            PT
                                        </th>
                                        <th style="width: 15%;font-size:small">
                                            Landing Site
                                        </th>
                                    </tr>
                                </thead>
                                @if (Model.Count() > 0)
                                {
                                    <tbody>
                                        @foreach (var obj in Model)
                                        {
                                            <tr>
                                                <td style="font-size:small" class="btn detail-po-daily" data-date="@date" data-po="@obj.po">@obj.po</td>
                                                <td style="font-size:small">PT#@obj.PTModel.pt</td>
                                                <td style="font-size:small">@obj.landing_site</td>
                                            </tr>
                                        }
                                    </tbody>
                                }
                            </table>
                        </div>
                    </div>
                </div>

                <div class="col-md-5 table-raw-daily" id="table-raw-daily">
                    <div class="card">
                        <div class="card-header">
                            <h3 class="card-title" id="card-title">Raw Material</h3>
                        </div>
                        <div class="card-body">
                            <table class="table table-bordered table-striped table-sm">
                                <thead>
                                    <tr>
                                        <th style="width: 1%;font-size:small">
                                            Source
                                        </th>
                                        <th style="width: 1%;font-size:small">
                                            Code
                                        </th>
                                        <th style="width: 5%;font-size:small">
                                            Description
                                        </th>
                                        <th style="width: 2%;font-size:small">
                                            Site
                                        </th>
                                        <th style="width: 1%;font-size:small">
                                            Qty
                                        </th>
                                    </tr>
                                </thead>
                                <tbody id="detail-raw-daily" name="detail-raw-daily">
                                </tbody>
                                <tfoot>
                                    <tr>
                                        <th style="width: 2%;font-size:small" colspan="4">Total</th>
                                        <th style="width: 2%;font-size:small" id="total-kg-raw"></th>
                                    </tr>
                                </tfoot>
                            </table>
                        </div>
                    </div>
                </div>



                <div class="col-md-7 table-fg-daily" id="table-fg-daily">
                    <div class="card">
                        <div class="card-header">
                            <h3 class="card-title" id="card-title">Finished Goods</h3>
                        </div>
                        <div class="card-body">
                            <table class="table table-bordered table-striped table-sm">
                                <thead>
                                    <tr>
                                        <th style="width: 1%;font-size:small">
                                            SAP Code
                                        </th>
                                        <th style="width: 10%;font-size:small">
                                            Description
                                        </th>
                                        <th style="width: 1%;font-size:small">
                                            Total Kgs
                                        </th>
                                        <th style="width: 1%;font-size:small">
                                            Total Cases
                                        </th>
                                    </tr>
                                </thead>
                                <tbody id="detail-fg-daily" name="detail-fg-daily">
                                </tbody>
                                <tfoot>
                                    <tr>
                                        <th style="width: 2%;font-size:small" colspan="2">Total</th>
                                        <th style="width: 2%;font-size:small" id="total-kg-fg"></th>
                                        <th style="width: 2%;font-size:small" id="total-cs-fg"></th>
                                    </tr>
                                </tfoot>
                            </table>
                        </div>
                    </div>
                </div>


            </div>
        </div>
    </section>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}