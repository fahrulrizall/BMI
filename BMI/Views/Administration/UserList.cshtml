@model IEnumerable<ApplicationUser>
@{
    ViewData["Title"] = "Role Manager";
}
<div class="content-wrapper">
    <section class="content-header">
    </section>
    <!-- Main content -->
    <section class="content">
        <div class="row">

            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title">User List</h3>
                        <div class="card-tools ">
                            <a href="/Account/Register" class="btn btn-sm float-right mx-1">
                                @*data-toggle="modal" data-target="#modal-user">*@
                                <i class="fa fa-plus">
                                </i>
                            </a>
                        </div>
                    </div>

                    <div class="card-body">
                        <table id="example1" class="table table-bordered table-striped table-sm">
                            <thead>
                                <tr>
                                    <th style="width: 20%;font-size:small">
                                        Email
                                    </th>
                                    <th style="width: 20%;font-size:small">
                                        UserName
                                    </th>
                                    <th style="width: 5%;font-size:small">
                                        Action
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var obj in Model)
                                {
                                    <tr>
                                        <td>
                                            <a style="font-size:small;color:black" asp-controller="Administration" asp-action="EditUser" asp-route-id="@obj.Id">@obj.Email</a>
                                        </td>
                                        <td style="font-size:small">@obj.UserName </td>
                                        <td>
                                            <form asp-controller="Account" asp-route-id="@obj.Id" asp-action="DeleteUser" method="post">
                                                @*<a data-toggle="modal" data-target="#modal-default" data-id="@obj.Id" class="btn btn-xs btn-warning update-role">
                                                        <i class="fa fa-lock" style="color:whitesmoke;outline:thin">
                                                        </i>
                                                    </a>*@
                                                <button type="submit" onclick="return confirm ('Delete User @obj.UserName');" class="btn btn-xs btn-danger">
                                                    <i class="fa fa-trash">
                                                    </i>
                                                </button>
                                            </form>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                    <!-- /.card-body -->
                </div>
                <!-- /.card -->
            </div>




